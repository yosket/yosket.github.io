{
  "name": "yosket.github.io",
  "version": "1.0.0",
  "description": "Nuxt.js project",
  "author": "Yosuke Tanaka <yosket87@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "nuxt --hostname 0.0.0.0",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate --hostname 0.0.0.0",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lintfix": "eslint --fix --ext .js,.vue .",
    "precommit": "npm run lintfix",
    "deploy": "NODE_ENV=production npm run generate && push-dir --dir=dist --branch=master --cleanup"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.4",
    "@nuxtjs/dotenv": "^1.1.1",
    "@nuxtjs/google-analytics": "^2.0.2",
    "nuxt": "^2.2.0"
  },
  "devDependencies": {
    "ajv": "^6.5.4",
    "babel-eslint": "^8.2.1",
    "eslint": "^4.15.0",
    "eslint-config-prettier": "^2.10.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-vue": "^4.0.0",
    "husky": "^1.1.2",
    "node-sass": "^7.0.0",
    "prettier": "^1.14.2",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "pug-plain-loader": "^1.0.0",
    "push-dir": "^0.4.1",
    "sass-loader": "^8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  }
